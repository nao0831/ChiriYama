            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="0dip"
                android:layout_height="72dip"
                android:layout_weight="1"
                android:background="#0000"
                android:src="@drawable/tabacco_144"
                android:tag="tabacco" />
        </TableRow>
    </TableLayout>

    <TableLayout
